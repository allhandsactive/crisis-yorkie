<h1>Listing decisions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Intern</th>
    <th>Open at</th>
    <th>Closed at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @decisions.each do |decision| %>
  <tr>
    <td><%= decision.name %></td>
    <td><%= decision.intern %></td>
    <td><%= decision.open_at %></td>
    <td><%= decision.closed_at %></td>
    <td><%= link_to 'Show', admin_decision_path(decision) %></td>
    <td><%= link_to 'Edit', edit_admin_decision_path(decision) %></td>
    <td><%= link_to 'Destroy', admin_decision_path(decision), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

