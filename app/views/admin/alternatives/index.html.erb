<h1>Listing alternatives</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Index</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alternatives.each do |a| %>
  <tr>
    <td><%= a.name %></td>
    <td><%= a.index %></td>
    <td><%= link_to 'Show', admin_alternative_path(a) %></td>
    <td><%= link_to 'Edit', edit_admin_alternative_path(a) %></td>
    <td><%= link_to 'Destroy', admin_alternative_path(a), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

